<view class="container">
  <view class="form-box">
    <view class="toolbar">
      <view class="toolbtnmodify" data-id='{{id}}' bindtap='modifyinfo' hidden="{{level == '业务员'}}">完善个人信息</view>
      <view class="toolbtnsetpwd" data-id='{{id}}' bindtap='setpassword'>修改密码</view>
    </view>
    <view class="form-item">
      <text class="itemname">用户名：{{username}}</text>
      <text class="itemnamecol">性别：{{gender}}</text>
    </view>
    <view class="form-item">
      <text class="itemname">手机号：{{mobile}}</text>
      <text class="itemnamecol">微信号：{{weixinno}}</text>
    </view>
    <view class="form-item" hidden="{{ (!isreferee) || (isreferee === 'NO_REF') }}">
      <text class="itemname">推荐人：{{refereename}}</text>
      <text class="itemnamecol">推荐人手机号：{{refereemobile}}</text>
    </view>
    <view class="form-item">
      <text class="itemname">当前级别：{{level}}</text>
      <text class="itemnamecol">档案状态：{{state}}</text>
    </view>
    <view class="form-item" wx:if="{{(level == '五钻A') || (level == '五钻B') || (level == '五钻C') || (level == '五钻D') || (level == '五钻E') || (level == '四钻A') || (level == '四钻B') || (level == '四钻C') || (level == '四钻D') || (level == '三钻A') || (level == '三钻B') || (level == '三钻C') || (level == '三钻D')}}">
      <text class="itemname">家庭地址：{{address}}</text>
    </view>
    <view class="form-item" hidden="{{level == '业务员'}}">
      <text class="itemname">邮箱:</text>
      <text class="itemnamecol">{{email}}</text>
    </view>
    <view class="form-item" hidden="{{level == '业务员'}}">
      <text class="itemname">银行卡卡号:</text>
      <text class="itemnamecol">{{bankno}}</text>
    </view>
    <view class="form-item" hidden="{{level == '业务员'}}">
      <text class="itemname">开户行地址:</text>
      <text class="itemnamecol">{{bankaddress}}</text>
    </view>
    <!-- <view class="form-item" hidden="{{(level == '业务员') || (level == '一钻A') || (level == '一钻B') || (level == '一钻C') || (level == '一钻D') || (level == '一钻E')}}">
      <text class="itemname">个人简历信息:</text>
      <view class="itemnamecol">
        <view wx:for="{{wiringdiagrams}}" wx:key="{{item.no}}">
          <image class="imagesize" mode='scaleToFill' src="{{item.path}}" data-files="{{wiringdiagrams}}" data-file="{{item}}" catchtap="showZoomFile" />
        </view>
      </view>
    </view> -->

    <view wx:if="{{(level == '五钻A') || (level == '五钻B') || (level == '五钻C') || (level == '五钻D') || (level == '五钻E') || (level == '四钻A') || (level == '四钻B') || (level == '四钻C') || (level == '四钻D')}}">
      <view class="form-item">
        <text class="itemname">家庭成员关系:</text>
      </view>
      <view class="form-famlily">
        <view class="famlily-content">姓名</view>
        <view class="famlily-content">称谓</view>
        <view class="famlily-content-add">手机号</view>
        <text class="famlily-content-add">联系地址</text>
      </view>
      <view wx:for="{{resp}}" wx:key="{{item}}">
        <view class="form-famlily">
          <view class="famlily-content">{{item.name}}</view>
          <view class="famlily-content">{{item.appellation}}</view>
          <view class="famlily-content-add">{{item.mobile}}</view>
          <text class="famlily-content-add famlily-content-text">{{item.address}}</text>
        </view>
      </view>
    </view>

    <!-- <view class="form-item" wx:if="{{(level == '五钻A') || (level == '五钻B') || (level == '五钻C') || (level == '五钻D') || (level == '五钻E')}}">
      <text class="itemname">个人征信证明:</text>
      <view class="itemnamecol">
        <view class="contractfiles" wx:for="{{contractfiles}}" wx:key="{{item.no}}">
          <image class="imagesize" mode='scaleToFill' src="{{item.path}}" data-files="{{contractfiles}}" data-file="{{item}}" catchtap="showZoomFile" />
        </view>
      </view>
    </view> -->
    <button type="default" class="login-btn" bindtap="loginOut">退出登录</button>
  </view>
</view>