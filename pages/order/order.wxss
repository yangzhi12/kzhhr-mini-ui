page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}
.container{
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.profile-info {
  width: 100%;
  height: 220rpx;
  background: #1982c2;
}
.profile-info .content-title {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #fff;
}
.profile-info .content {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #fff;
}
.user-menu{
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #fff;
    padding-left: 20rpx;
    padding-right: 20px;
}

.level {
  padding-bottom: 20rpx;
}
.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.title .menu-items {
  position: absolute;
  left: 55rpx;
  top: 280rpx;
  border: 1px solid #f4f4f4;
  border-top-width: 0rpx;
}

.title .menu-items .item {
  padding: 15rpx 15rpx;
  background-color: white;
}

.title .menu-items .item-selected {
  padding: 10rpx 10rpx;
  background-color: #5f6fee;
  color: white;
}

.titleSel {
  color: #5f6fee;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.titleUnsel {
  color: #858fab;
  font-size: #858fab;
}

.headerLineSel {
  background: #5f6fee;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}

.user-menu .content{
  /* padding-bottom: 20rpx; */
}

.user-menu .content .contentitem{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #d9d9d9;
}

.user-menu .content .contentitemline{
  padding-top: 15rpx;
}

.user-menu .nocontent{
  height: 400rpx;
  text-align: center;
  line-height: 400rpx;
}

.user-menu .addcontract{
  position: absolute;
  right: 25rpx;
  top: 320rpx;
  padding: 15rpx 15rpx;
  border: 1px solid #5f6fee;
  border-radius: 10rpx;
}

